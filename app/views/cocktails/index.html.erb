



<div class=container>
  <h1>Cocktails</h1>
  <ol>
    <% @cocktails.each do |cocktail| %>
      <li><%=link_to cocktail.name, cocktail_path(cocktail) %> |
        <%= link_to 'x', cocktail_path(cocktail), method: :delete,
        data: { confirm: "Are you sure?" } %> </li>
    <% end %>
  </ol>
  <br>
  <%= link_to "Add a new cocktail", new_cocktail_path %>
</div>


